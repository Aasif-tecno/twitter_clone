<%= form_tag(search_path, method: 'get') do %>
  <div class="card-body row no-gutters align-items-center">
    <div class="col">
        <%= text_field_tag(:search, params[:search], class: "form-control form-control-lg form-control-borderless", type: "Search",placeholder:"Search User") %>
    </div>
        <%= submit_tag("Search", name: nil, class: "btn btn-primary btn-lg", type: "button") %>
  </div>
<% end %>
