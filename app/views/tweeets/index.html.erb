<div class="row mt-4">
  <% if user_signed_in? %>
    <div class="col-md-3">
      <div class="card card-index mb-3 shadow">
        <div class="card-header">
            <h4>Profile</h4>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-4">
              <%= gravatar_image_tag(current_user.email, class: 'rounded-circle gravatar-img', size:  15 )%>
            </div>
            <div class="col-8">
              <strong><%= current_user.fullname %> </Strong><br>
              <small>@<%= current_user.username%></small>
            </div>
          </div>
        </div>
          <div class="card-footer">
            <table class="table-borderless">
              <tr>
                <th>Tweets</th>
                <th>Following</th>
                <th>Followers</th>
              </tr>
              <tr class="text-center">
                <td><%= current_user.tweeets.count%></td>
                <td>323</td>
                <td>1.4m</td>
              </tr>
            </table>
        </div>
      </div>
    </div>
    <div class="col-md-6">
  <% else %>
    <div class="col-md-9">
  <% end %>
    <div class="card card-trends shadow mb-3">
      <div class="card-header">
        <h4>Trends</h4>
        <% if user_signed_in? %>
          <%= form_with(model: @tweeet) do |form| %>
            <div class="form-group">
              <%= form.text_area :tweeet, class: "form-control", placeholder: "tweet about it"%>
            </div>
            <div class="form-group">
              <%= form.submit "Tweet", class: "btn btn-dark" %>
            </div>
          <% end %>
        <% end %>
        <div class="img-fluid rounded">
        </div>
      </div>
      <div class="p-3">
      <% @tweeets.each do |tweeet| %>
        <div class="card card-index-tweets mb-4">
          <div class="row ml-2">
            <div class="col-1 pt-3">
              <%= gravatar_image_tag(tweeet.user.email, size: 50, class: "rounded-circle  gravatar-img-tweet")%>
            </div>
            <div class="col-11">
              <div class="card-body">
                <strong><%= tweeet.user.fullname %></strong><br>
                <small>@<%= tweeet.user.username %></small>
                <hr><br>
                  <%= tweeet.tweeet %><br>
                  <small class="text-secondary mb-0"><%= time_ago_in_words(tweeet.created_at) %> ago</small><br>
                  <%if @tweeet.user = current_user %>
                    <div class="d-flex justify-content-between mt-3">
                      <div>
                        <%= link_to tweeet_path(tweeet) do %>
                        <%= fa_icon "paragraph" ,class: "btn btn-primary"%>
                        <% end %>
                      </div>
                      <div>
                        <%= link_to edit_tweeet_path(tweeet) do %>
                        <%= fa_icon "pencil" ,class: "btn btn-warning"%>
                        <% end %>
                      </div>
                      <div>
                        <%= link_to tweeet_path(tweeet), method: :delete do %>
                        <%= fa_icon "trash" ,class: "btn btn-danger"%>
                        <% end %>
                      </div>
                    </div>
                  <%end %>
                  <div class="d-flex justify-content-between mt-3">
                    <span><%= fa_icon "heart" %> &nbsp&nbsp 33</span>
                    <span><%= fa_icon "retweet" %> &nbsp&nbsp 24</span>
                    <span><%= fa_icon "comments" %> &nbsp&nbsp 43</span>
                    <%= fa_icon "share" %>
                  </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card card-index mb-3 shadow">
      <div class="card-header">
        <h4>Who to follow</h4>
      </div>
      <div class="card-body">
       <div class="input-group mb-3">
        <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search"
          aria-describedby="search-addon" />
        <button type="button" class="btn btn-primary">search</button>
      </div>
      <% @user.each do |user| %>
        <div class="card card-user mb-3 p-2">
          <div class="row">
            <div class="col-2">
              <%= gravatar_image_tag(user.email, size: 50, class: "rounded-circle  gravatar-img-user")%>
            </div>
            <div class="col-10">
              <strong><%= user.fullname  %></strong><br>
              <small class="text-secondary mt-0">@<%= user.username  %></small>
            </div>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>